<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_action_bar_icon_vertical_padding_material">
    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_marginBottom="@dimen/abc_action_bar_default_height_material" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appCompatRatingBar1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:padding="@dimen/abc_action_bar_elevation_material"
        android:rating="1"
        android:stepSize="0.1"
        android:numStars="5" />


</LinearLayout>
